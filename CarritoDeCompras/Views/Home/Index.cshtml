@{
    ViewBag.Title = "Productos";
}
<main>
    <h2 class="text-center mb-md-6 display-3">Productos</h2>
    <p class="text-center display-6 my-5 ">Los productos más comprados en el supermercado</p>
    <div class="container d-flex justify-content-center mb-5">
        <div id="carouselExample" class="carousel slide" data-bs-ride="carousel" data-bs-interval="3000" style="width: 600px; height: 600px;">
            <div class="carousel-inner ">
                @foreach (var item in Model)
                {
                    string rutaCompletaArchivo = item.ImagenUrl;
                    string nombreArchivo = Path.GetFileName(rutaCompletaArchivo);
                    <div class="carousel-item active">
                        <img src="~/img/Productos/@nombreArchivo" class="d-block w-100 img-fluid" alt="..." style="width: 600px; height: 600px;">
                        <div class="carousel-caption d-none d-md-block">
                            <h1 class="text-dark">@item.Nombre</h1>
                            <p class="text-dark lead">@item.Descripcion</p>
                        </div>
                    </div>
                }
            </div>

            <button style="color: black" class="carousel-control-prev btn-dark" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Anterior</span>
            </button>
            <button class="carousel-control-next btn-primary" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Siguiente</span>
            </button>
        </div>
    </div>

    <h2 class="text-center mb-md-6 display-2 mt-5 mb-5">Productos del supermercado</h2>
    @Html.Partial("ProductosPartial")
</main>
<script>
    $(document).ready(function () {
        $('.carousel').carousel();
    });
</script>






