@model CarritoDeCompras.Models.ProductoModels

@{
    ViewBag.Title = "Create";
}

<div class="d-flex justify-content-center">
    @using (Html.BeginForm("Create", "Producto", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="container">
            <h1 class="mb-2 mt-5">Crear producto</h1>
            <hr />

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                <h5 class="mt-3">@Html.LabelFor(model => model.Codigo)</h5>
                @Html.EditorFor(model => model.Codigo, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Codigo, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <h5 class="mt-3">@Html.LabelFor(model => model.Nombre)</h5>
                @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <h5 class="mt-3">@Html.LabelFor(model => model.Precio)</h5>
                @Html.EditorFor(model => model.Precio, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Precio, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <h5 class="mt-3">@Html.LabelFor(model => model.Descripcion)</h5>
                @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <h5 class="mt-3">@Html.LabelFor(model => model.Stock)</h5>
                @Html.EditorFor(model => model.Stock, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Stock, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <h5 class="mt-3">@Html.LabelFor(model => model.Fabricante)</h5>
                @Html.EditorFor(model => model.Fabricante, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Fabricante, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <h5 class="mt-3">@Html.LabelFor(model => model.Categoria)</h5>
                @Html.EditorFor(model => model.Categoria, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Categoria, "", new { @class = "text-danger" })
            </div>

            <div class="form-group col-12">
                <h5 class="form-label mt-3" for="Imagen">Imagen</h5>
                <div class="input-group">
                    <input type="file" class="form-control" id="Imagen" name="imagen" aria-describedby="inputGroupFileAddon" aria-label="Imagen">
                </div>
            </div>
            <div class="form-group col-11 text-lg-center">
                <button type="submit" class="btn btn-primary mt-3">Crear producto</button>
                @Html.ActionLink("Volver a lista productos", "Index", null, new { @class = "btn btn-secondary mt-3" })
            </div>
        </div>
    }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
